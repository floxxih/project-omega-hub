# StackHub Frontend Environment Variables
# Copy this file to .env.local and fill in the values

# ============================================
# REQUIRED: Reown (WalletConnect) Project ID
# Get your project ID at https://cloud.reown.com
# ============================================
NEXT_PUBLIC_REOWN_PROJECT_ID=your_project_id_here

# ============================================
# OPTIONAL: Network Configuration
# ============================================

# Stacks Network (mainnet or testnet)
NEXT_PUBLIC_STACKS_NETWORK=mainnet

# Stacks API URL (defaults to Hiro API)
NEXT_PUBLIC_STACKS_API_URL=https://api.hiro.so

# ============================================
# OPTIONAL: Analytics & Monitoring
# ============================================

# Enable analytics (true/false)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# OPTIONAL: Feature Flags
# ============================================

# Enable testnet feat# Copy this file to .env.local and fill  Enable debug mode
NEXT_PUBLIC_DEBUG_MODE=false
